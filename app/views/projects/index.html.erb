 <!-- Page Content -->
<div class="container">
    <div class="col-lg-12">
        <h1 class="page-header">Projekti</h1>
        <% if admin_signed_in? %>
        	<%= link_to 'DODAJ PROJEKT', new_project_path %>
        <% end %>
    </div>
    <div class="col-lg-12 thumb">
    	<%# link_to 'Mogucnosti HTML5 jezika', slide1_path, :class => 'project' %>
        <!-- <a class="project" href="projects.html">Mogucnosti HTML5 jezika</a> -->
    </div>
	<ul style="margin: 0 40px; list-style-type: none;">
		<% @projects.each do |project| %>
	    	<li>
                <a href="<%= project.link %>" style="display: inline-block; margin-right: 50px; "><%= project.name %></a>
                <% if admin_signed_in? %>
                    <%= link_to 'Izbrisi projekt', destroy_project_path(project.id), :method => 'delete' %>
                <% end %>
            </li>
		<% end %> 
	</ul>
	  

